<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Budżetowe Cięcie</title>
    <link rel="icon" type="image/x-icon" href="~/nożyczki.ico" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCTemplate.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/services.css" />
    <style>
        .nav-link.btn-custom {
            color: #007bff;
            height: 110%;
            display: flex;
            align-items: center;
            padding-left: 100px;
            padding-right: 100px;
            border-radius: 0.5rem;
            margin-left: 10px;
            margin-right: 10px;
        }

            .nav-link.btn-custom:hover {
                color: white;
                background-color: #007bff;
            }

        .navbar-collapse {
            display: flex;
            justify-content: space-between;
        }

        .navbar-brand img {
            height: 40px; 
            margin-left: 10px;
            margin-right: 10px;
        }


        footer { 
            background-color: white;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/nożyczki-512x512.png" alt="Nożyczki" />
                    Budżetowe Cięcie
                    <img src="~/images/piggy-bank-icon.png" alt="Skarbonka" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn-custom" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-custom" asp-area="" asp-controller="Services" asp-action="Overview">Cennik</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary btn-custom" asp-area="" asp-controller="Account" asp-action="Login">Logowanie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary btn-custom" asp-area="" asp-controller="Account" asp-action="Register">Zarejestruj się</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BudgetCut - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




